@{
}

@model IEnumerable<Product>

<h2>Products</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>Stock Level</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.Name</a></td>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.Price</a></td>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.CategoryID</a></td>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.OnSale</a></td>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.StockLevel</a></td>
        </tr>
    }

</table>

<div style="display: block">
    <a href="/Product/UpdateProduct/@Model.ProductID">Update this Product</a>
</div>
